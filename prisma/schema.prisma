generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Patient {
  id        Int     @id @default(autoincrement())
  name      String
  phone     String
  createdAt DateTime @default(now())

  appointments Appointment[]
}

model Appointment {
  id        Int      @id @default(autoincrement())
  date      DateTime
  patientId Int

  patient Patient @relation(fields: [patientId], references: [id])
}
